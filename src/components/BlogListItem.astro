---
const { ListImages } = Astro.props
const { ContentsTitle } = Astro.props
import { Image } from 'astro:assets';
---
<div class="main-article-wrapper">
  <article class="main-article">
    <!-- 内容(記事タイトル・画像など)はarticleに -->
    <!-- marginとか聞かせたいなら外側にdivとかを付ける -->

    <div class="main-article-image-wrapper">
      <Image
        src={ListImages}
        alt="blog-cover-image"
      />  
    </div>
    <h2 class="main-article-title">{ ContentsTitle }</h2>
    <p class="main-article-up-date">更新:XXXX/XX/XX</p>
  </article>        
</div>

<style>
/* 後でクラス名を修正する */
.main-article-wrapper {
  margin-bottom: 15px;
}

.main-article {
  background-color: rgb(255, 255, 255, 0.5);
}

.main-article-title {
  margin: 0;
  text-align: left;
}

.main-article-up-date {
  margin: 0;
  text-align: left;
}

.main-article-image-wrapper > img {
  width: 100%;
  height: 100%;
}
</style>