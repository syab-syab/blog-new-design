---
const { ImageSrc } = Astro.props
import { Image } from 'astro:assets';
---
<div class="profile-wraper">
  <h4 class="profile-heading">Profile</h4>
  <div class="profile-content">
    <div class="profile-image-name-wrapper">
      <div class="profile-image-wrapper">
        <Image
          src={ImageSrc}
          alt="profile-image"
        />
      </div>
      <div class="profile-name-wrapper">
        <h5>syab-syab</h5>
      </div>
    </div>
    <div class="profile-description-wrapper">
      <p>
        <span>texttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttexttext</span>
      </p>
    </div>        
  </div>
</div>

<style>
.profile-wraper {
  border:#371C10 1px solid;
  background-color: rgb(255, 255, 255, 0.5);
  margin-bottom: 30px;
}

.profile-heading {
  margin: 0;
  font-size: 24px;
  border-bottom:#371C10 1px solid;
}

.profile-content {

  /* justify-content: space-between; */
  padding: 10px 20px;
}

.profile-image-name-wrapper {
  display: flex;
  align-items: center;
}

.profile-image-wrapper {
  /* flex-grow: 1; */
  width: 30%;
}

.profile-image-wrapper > img {
  width: 100%;
  height: 100%;
}

.profile-name-wrapper {
  /* flex-grow: 9; */
  /* text-align: left; */
  width: 100%;
  padding-left: 20px;
}

.profile-name-wrapper > h5 {
  margin: 0;
  font-size: 26px;
}

.profile-description-wrapper {
  /* overflow: hidden; */
  word-break: break-all;
  text-align: left;
}
</style>